# Configuration minimale pour Firewall Manager

# Clé secrète (générée automatiquement si vide)
SECRET_KEY=

# Adresse d'écoute (0.0.0.0 pour toutes les interfaces)
HOST=0.0.0.0
PORT=8000

# Base de données (fichier SQLite par défaut)
DATABASE_URL=sqlite:///./firewall.db

# Mistral AI (obligatoire)
MISTRAL_API_KEY=votre_cle_api_mistral

# Options avancées (décommenter si nécessaire)
# DEBUG=True
# LOG_LEVEL=INFO
